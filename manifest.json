{
  "manifest_version": 3,
  "name": "API Tester",
  "version": "1.0",
  "description": "Simple REST API testing tool in your browser",
  "permissions": [
    "storage",
    "alarms",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
